{
  "name": "real-u",
  "version": "0.1.2",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "check-all": "npm run lint-check && npm run format-check && npm run typecheck",
    "fix-all": "npm run organize-imports && npm run format-fix && npm run lint-fix",
    "organize-imports": "biome check ./src --write",
    "typecheck": "tsc --noEmit -p tsconfig.json --composite false",
    "lint-fix": "biome lint --write ./src",
    "lint-check": "biome lint ./src",
    "format-fix": "biome format --write ./src",
    "format-check": "biome format ./src",
    "clean": "rm -rf .next dist coverage",
    "prepare": "husky",
    "release": "standard-version"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "biome check --write"
    ]
  },
  "dependencies": {
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-slot": "^1.2.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "embla-carousel-autoplay": "^8.6.0",
    "embla-carousel-react": "^8.6.0",
    "gsap": "^3.13.0",
    "lenis": "^1.3.4",
    "lucide-react": "^0.511.0",
    "next": "15.3.3",
    "next-intl": "^4.1.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwind-merge": "^3.3.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.0.6",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.0",
    "standard-version": "^9.5.0",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.3.2",
    "typescript": "^5"
  }
}
